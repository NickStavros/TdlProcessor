{ "version": "0.2.0",
  "configurations": 
  [ {
      "type": "node",
      "request": "launch",
      "name": "Run TdlProcessor.js",
      "program": "${workspaceFolder}/Code/TdlProcessor.js",
      "args": 
      [ "--input",      "./Templates/HelloWorld.tdl",
        "--output",     "./Output/HelloWorld.text",
        "--settings",   "./Data/tdlSettings.json",
        "--user",       "John Doe, Jr."
      ],
      "console": "integratedTerminal"
    }
  ]
}


